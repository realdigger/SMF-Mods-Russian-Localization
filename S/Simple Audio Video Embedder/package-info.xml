<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Bugo:AutoEmbedMediaProRUS</id>
	<name>Simple Audio Video Embedder RUS</name>
	<type>modification</type>
	<version>0.3</version>
	
	<install for="1.1 - 1.99.99">
		<modification>russian.xml</modification>
		<modification>russian-utf8.xml</modification>
		<require-file name="AutoEmbedMediaPro.russian.php" destination="$languagedir" />
		<require-file name="AutoEmbedMediaPro.russian-utf8.php" destination="$languagedir" />
		<redirect url="?action=mediapro;sa=settings" timeout="1000" />
	</install>
	
	<uninstall for="1.1 - 1.99.99">
		<modification type="file" reverse="true">russian.xml</modification>
		<modification type="file" reverse="true">russian-utf8.xml</modification>
		<remove-file name="$languagedir/AutoEmbedMediaPro.russian.php" />	
		<remove-file name="$languagedir/AutoEmbedMediaPro.russian-utf8.php" />
		<redirect url="?action=packages;sa=browse" timeout="1000" />
	</uninstall>
	
	<install for="2.0 - 2.99.99">
		<modification>russian.xml</modification>
		<modification>russian-utf8.xml</modification>
		<require-file name="AutoEmbedMediaPro.russian.php" destination="$languagedir" />
		<require-file name="AutoEmbedMediaPro.russian-utf8.php" destination="$languagedir" />
		<redirect url="?action=admin;area=mediapro;sa=settings" timeout="1000" />
	</install>
	
	<uninstall for="2.0 - 2.99.99">
		<modification type="file" reverse="true">russian.xml</modification>
		<modification type="file" reverse="true">russian-utf8.xml</modification>
		<remove-file name="$languagedir/AutoEmbedMediaPro.russian.php" />	
		<remove-file name="$languagedir/AutoEmbedMediaPro.russian-utf8.php" />
		<redirect url="?action=admin;area=packages;sa=browse" timeout="1000" />
	</uninstall>
	
</package-info>